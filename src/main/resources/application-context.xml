<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Definirea bean-urilor pentru ClientRepository È™i Banking -->
    <bean id="mapClientRepository" class="com.luxoft.bankapp.service.storage.MapClientRepository" autowire="byType"/>

    <bean id="banking" class="com.luxoft.bankapp.service.BankingImpl"/>

    <bean id="bankReport" class="com.luxoft.bankapp.service.BankReportServiceImpl" autowire="byType"/>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="clients.properties"/>
    </bean>

</beans>
